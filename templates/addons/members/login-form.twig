{% embed 'wrappers/shortcode.twig' %}
  {% block content %}
    {% if show_title %}
      <h2 class="{{ class('c-heading', 'h2') }}">
        {{ __('Login', 'chipmunk') }}
      </h2>
    {% endif %}

    {% if blocker %}
      {% include 'partials/alerts.twig' with { alerts: blocker } %}
    {% else %}
      <form class="c-form" action="{{ fn('site_url', 'wp-login.php') | esc_url }}" method="post" novalidate data-validate>
        {% include 'partials/alerts.twig' %}

        <div class="{{ class('c-form__field', 'wide') }}">
          <input type="text" name="log" placeholder="{{ __('Username or Email Address', 'chimpunk') }}*" required minlength="3" class="c-form__input">
        </div>

        <div class="{{ class('c-form__field', 'wide') }}">
          <input type="password" name="pwd" placeholder="{{ __('Password', 'chimpunk') }}*" required class="c-form__input">
        </div>

        <div class="{{ class('c-form__field', 'wide', 'cta') }}">
          <button type="submit" class="{{ class('c-button', 'primary-outline') }}">
            {{ __('Login', 'chipmunk') }}
          </button>

          <label class="c-form__checkbox">
            <input type="checkbox" name="rememberme" value="forever">
            {{ __('Remember me', 'chimpunk') }}
          </label>
        </div>

        <div class="{{ class('c-form__field', 'wide', 'cta') }}">
          <a href="{{ fn('wp_lostpassword_url', redirect_to) | esc_url }}" class="c-form__link">
            {{ __('Forgot your password?', 'chipmunk') }}
          </a>

          {% if site.option('users_can_register') %}
            <a href="{{ fn('wp_registration_url') | esc_url }}" class="c-form__link">
              {{ __('Register an account', 'chipmunk') }}
            </a>
          {% endif %}
        </div>

        <input type="hidden" name="redirect_to" value="{{ redirect_to | esc_url }}">
      </form>
    {% endif %}
  {% endblock %}
{% endembed %}
