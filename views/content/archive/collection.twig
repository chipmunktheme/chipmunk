{% set collections = get_terms({
  taxonomy: 'resource-collection',
  orderby: 'name',
  pad_counts: true,
}) %}

{% set collections = collections | filter(collection => not collection.parent) %}

<div class="l-section">
	<div class="l-container">
		<div class="l-component l-header">
			<{{ is_front_page ? 'h2' : 'h1' }} class="{{ cn('c-heading', 'h4') }}">
				{{ __('Collections', 'chipmunk') }}
			</{{ is_front_page ? 'h2' : 'h1' }}>
		</div>

    {% include 'content/loop/collection.twig' %}
	</div>
</div>
