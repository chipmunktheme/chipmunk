{% set output %}
  {% for stat, args in stats %}
    {# Checks if it's array of stat objects #}
    {% if args | keys | first matches '/^\\d+$/' %}
      {% for arg in args %}
        {% if arg %}
          {% include "partials/stats/#{ stat }.twig" with (arg is iterable ? arg : {}) %}
        {% endif %}
      {% endfor %}
    {% elseif args %}
      {% include "partials/stats/#{ stat }.twig" with (args is iterable ? args : {}) %}
    {% endif %}
  {% endfor %}
{% endset %}

{% if output %}
	<ul class="c-stats {{ class ?? '' }}">
		{{ output }}
	</ul>
{% endif %}
