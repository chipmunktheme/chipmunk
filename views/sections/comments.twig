{% if post.password_required %}
	{{ __('This post is password protected. Enter the password to view any comments.', 'chipmunk') }}
{% else %}
  {% if post.comment_status == 'open' or post.comments %}
    <div class="{{ cn('l-section', 'theme-light') }}">
      <div class="l-container">
        <div class="l-wrapper">
          {% include 'sections/comments/list.twig' %}
          {% include 'sections/comments/form.twig' %}
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}
