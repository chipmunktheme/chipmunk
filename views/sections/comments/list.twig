{% if post.comments %}
  <div class="l-component">
    <h3 class="{{ cn('c-heading', 'h4') }}">
      {{ _n( '%s Comment', '%s Comments', post.comments | length, 'chipmunk' ) | format(fn('number_format_i18n', post.comments | length ) ) }}
    </h3>
  </div>

  <div class="l-component l-component--md">
    <div class="c-comment__list">
      {% for comment in post.comments %}
        {% include 'partials/comment.twig' %}
      {% endfor %}
    </div>
  </div>
{% endif %}
