<h2>{{ subject }}</h2>

<p>
  <strong>{{ __('Title', 'chipmunk') }}:</strong><br>
  {{ post.title }}
</p>

<p>
  <strong>{{ __('Collection', 'chipmunk') }}:</strong><br>
  {{ post.terms('resource-collection') | join(', ') }}
</p>

<p>
  <strong>{{ __('Website URL', 'chipmunk') }}:</strong><br>
  {% set link = get_resource_links(post.id) | first %}
  {{ get_external_link(link.url, link.title) }}
</p>

{% if post.content %}
  <p>
    <strong>{{ __('Description', 'chipmunk') }}:</strong><br>
    {{ post.content | striptags }}
  </p>
{% endif %}

<p>
  <a href="{{ fn('admin_url', "post.php?post=#{post.id}&action=edit") }}">
    <strong>&raquo; {{ __('Review submission', 'chipmunk') }}</strong>
  </a>
</p>
